---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"label"> {
  htmlFor: string;
  className?: string;
}

const { htmlFor, className, ...props } = Astro.props;
---

<label
  for={htmlFor}
  class={cn(
    "text-lg peer-disabled:cursor-not-allowed peer-disabled:opacity-70",
    className,
  )}
  {...props}><slot /></label
>
