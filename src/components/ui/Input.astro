---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"input"> {
  className?: string;
}

const { type, className, ...props } = Astro.props;
---

<input
  type={type}
  class={cn(
    "flex w-full bg-transparent px-3 py-2 text-xl focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-black bg-black border border-gray-300 text-white ",
    className,
  )}
  {...props}
/>
