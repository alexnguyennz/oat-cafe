---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"textarea"> {
  className?: string;
}
const { ...props } = Astro.props;
---

<textarea
  class={cn(
    "flex max-h-72 min-h-[80px] w-full bg-transparent px-3 py-2 text-xl focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-black bg-black border border-gray-300 text-white",
  )}
  {...props}></textarea>
