---
import { Icon } from "astro-icon/components";

import ContactInfo from "@/components/ContactInfo.astro";
import Address from "@/components/Address.astro";
import OpeningHours from "@/components/OpeningHours.astro";
---

<footer class="mt-auto flex justify-center bg-black py-8 text-white">
  <div class="flex flex-col gap-4">
    <ContactInfo />
    <Address />
    <OpeningHours />

    <div class="flex items-center gap-2">
      <Icon name="lucide:copyright" class="size-5 text-gray-400" />
      <p class="text-gray-400">
        {new Date().getFullYear()} Oat Caf√©
      </p>
    </div>

    <div class="flex justify-center gap-2">
      <a
        href="https://www.instagram.com/oat.cafe/"
        target="_blank"
        rel="noopener noreferrer nofollow"
        aria-label="Instagram page"
        ><Icon name="instagram" class="size-8" alt="Instagram logo" /></a
      >
    </div>
  </div>
</footer>
