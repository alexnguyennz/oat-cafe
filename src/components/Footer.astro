---
import { Icon } from "astro-icon/components";

import ContactInfo from "@/components/ContactInfo.astro";
---

<footer class="mt-auto flex justify-center bg-black py-8 text-white">
  <div class="flex flex-col gap-4">
    <ContactInfo />

    <div class="flex items-start gap-2">
      <Icon name="lucide:map" class="size-5" />
      <address>
        <a
          href="https://wellington.govt.nz/recreation/facilities-and-centres/akau-tangi-sports-centre"
          target="_blank"
          rel="noopener noreferrer nofollow">Ākau Tangi Sports Centre</a
        ><br />72 Kemp Street<br />Wellington 6022
      </address>
    </div>

    <div class="flex items-center gap-2">
      <Icon name="lucide:copyright" class="size-5 text-gray-400" />
      <p class="text-gray-400">
        {new Date().getFullYear()} Oat Café
      </p>
    </div>
  </div>
</footer>
