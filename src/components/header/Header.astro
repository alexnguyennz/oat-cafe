---
import { Image } from "astro:assets";

import MobileMenu from "./MobileMenu.astro";

import OatUnderline from "./OatUnderline.astro";

import { cn } from "@/lib/utils";
import { links } from "@/lib/data";

const pathname = Astro.url.pathname;
---

<header class="z-10 mx-auto mt-4 flex flex-col gap-4">
  <a
    href="https://wellington.govt.nz/recreation/facilities-and-centres/akau-tangi-sports-centre"
    target="_blank"
    rel="noreferrer noopener nofollow"
    class="corner absolute left-0 top-0 size-[8.5rem] bg-gray-900 sm:size-36 md:size-48 lg:size-60"
    ><Image
      src={import("../../assets/img/akau-tangi.png")}
      width="250"
      alt="Akau Tangi Sports Centre logo"
      class="size-20 md:size-28 lg:size-36"
      loading="eager"
    /></a
  >

  <div
    class="relative z-50 mx-auto flex flex-col items-center justify-center gap-3 rounded-lg"
  >
    <a href="/"
      ><Image
        src={import("../../assets/img/logo.png")}
        width="250"
        alt="Oat CafÃ© logo"
        class="mx-auto w-32"
        loading="eager"
      /></a
    >
    <nav
      class="relative hidden rounded-3xl bg-accent-red/90 px-3 py-2.5 shadow-xl transition duration-200 sm:block"
    >
      <ul class="flex items-center gap-2 text-xl">
        {
          links.map((link) => (
            <li class="relative">
              <a
                href={link.href}
                class={cn(
                  "group relative z-20 inline-flex rounded-lg p-2 font-semibold text-gray-200 transition-colors hover:text-white",
                  link.href === "/"
                    ? pathname === "/" && "rounded-lg text-white"
                    : pathname.startsWith(link.href) && "rounded-lg text-white",
                )}
                data-astro-prefetch
              >
                {link.name}
              </a>

              {link.href === "/"
                ? pathname === "/" && <OatUnderline />
                : pathname.startsWith(link.href) && <OatUnderline />}
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<MobileMenu />
